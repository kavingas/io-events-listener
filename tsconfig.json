{
  "extends": "@tsconfig/node14/tsconfig.json",
  "include": [
    "src/",
    "server.ts",
    "health-check.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "compilerOptions": {
    "target": "ES2018",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noEmitOnError": false,
    "resolveJsonModule": true,
    "esModuleInterop": true
  }
}
